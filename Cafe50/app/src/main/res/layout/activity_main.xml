<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    android:background="#F0F0F0"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                android:paddingBottom="8dp"

                >
                <ImageView

                    android:id="@+id/fizzaImage"

                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/fizza"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"

                    />


                <TextView

                    android:layout_marginTop="20dp"
                    android:id="@+id/fizzaInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALHAAMDULILLAH This Fizza is Awesome"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:alpha="0.60"
                    android:layout_toEndOf="@id/fizzaImage"


                    />
                <TextView
                    android:id="@+id/fizzaName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Fizza Name"
                    android:layout_toEndOf="@id/fizzaImage"
                    android:layout_below="@id/fizzaInfo"
                    android:alpha="0.87"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:background="#FFFFFF"
                >
                <ImageView

                    android:id="@+id/lemonadeImage"

                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/lemonade"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"

                    />


                <TextView

                    android:layout_marginTop="20dp"
                    android:id="@+id/lemonadeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALHAAMDULILLAH Cool Lemonade"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:alpha="0.60"
                    android:layout_toEndOf="@id/lemonadeImage"


                    />
                <TextView
                    android:id="@+id/lemonadeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Lemonade Name"
                    android:layout_toEndOf="@id/lemonadeImage"
                    android:layout_below="@id/lemonadeInfo"
                    android:alpha="0.87"
                    />




            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"

                android:paddingBottom="8dp"
                android:background="#FFFFFF"
                >
                <ImageView

                    android:id="@+id/cakeImage"

                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/cake"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"

                    />


                <TextView

                    android:layout_marginTop="20dp"
                    android:id="@+id/cakeInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALHAAMDULILLAH Nice Cake"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:alpha="0.60"
                    android:layout_toEndOf="@id/cakeImage"


                    />
                <TextView
                    android:id="@+id/cakeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Cake Name"
                    android:layout_toEndOf="@id/cakeImage"
                    android:layout_below="@id/cakeInfo"
                    android:alpha="0.87"
                    />




            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:background="#FFFFFF"
                >
                <ImageView

                    android:id="@+id/melonImage"

                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/watermelon"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"

                    />


                <TextView

                    android:layout_marginTop="20dp"
                    android:id="@+id/melonInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALHAAMDULILLAH Fresh Water Melon"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:alpha="0.60"
                    android:layout_toEndOf="@id/melonImage"


                    />

                <TextView
                    android:id="@+id/melonName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/melonInfo"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_toEndOf="@id/melonImage"
                    android:alpha="0.87"
                    android:text="Melon Name" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:background="#FFFFFF"
                android:layout_marginBottom="64dp"
                >
                <ImageView

                    android:id="@+id/saladImage"

                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/salad"
                    android:scaleType="centerCrop"
                    android:layout_marginEnd="16dp"

                    />


                <TextView

                    android:layout_marginTop="20dp"
                    android:id="@+id/saladInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ALHAAMDULILLAH Green Salad"
                    android:textSize="24sp"
                    android:textColor="@color/black"
                    android:alpha="0.60"
                    android:layout_toEndOf="@id/saladImage"


                    />
                <TextView
                    android:id="@+id/saladName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Salad Name"
                    android:layout_toEndOf="@id/saladImage"
                    android:layout_below="@id/saladInfo"
                    android:alpha="0.87"
                    />




            </RelativeLayout>


        </LinearLayout>
    </ScrollView>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Some"
        android:backgroundTint="#6202EE"
        android:padding="20dp"
        android:layout_alignParentBottom="true"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>